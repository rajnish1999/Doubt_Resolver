<%- include('partials/header.ejs') %>

<div class="outerMostDivForSignUp">
    <div class="middleDivForSignUp">
        <div class="signUpFinalDiv">
            <p class="signUpHeading"><span><i class="fas fa-sign-in-alt fa-lg"></i></span>Add User</p>
            <div class="message">
                <h1>email does not match</h1>
                <button 
                class="crossButton"
                onClick="hide()"
                >
                <i class="far fa-times fa-2x"></i>
                </button>
            </div>
            <form action="/signUp", method="POST" class="signUpForm">
                <div class="formDiv">
                    <label for="username">Name</label>
                    <input 
                        type="text" 
                        class="inputEle" 
                        id="username"
                        name="username" 
                        placeholder="Username..."
                        value="<%= typeof username != 'undefined' ? username : ''%>"
                    >
                </div>
                <div class="formDiv">
                    <label for="email">Email Id</label>
                    <input type="text" 
                        class="inputEle" 
                        id="email" 
                        name="email" 
                        placeholder="Email..."
                        value="<%= typeof email != 'undefined' ? email : ''%>"
                    >
                </div>
                <div class="formDiv">
                    <label for="password">Password</label>
                    <input 
                        type="password" 
                        id="password"
                        class="inputEle" 
                        name="password"
                        placeholder="Password..."
                        value="<%= typeof password != 'undefined' ? password : ''%>"
                    >
                </div>
                <div class="formDiv">
                    <label for="confirm_password">Confirm Password</label>
                    <input 
                        type="password"  
                        id="confirm_password" 
                        class="inputEle" 
                        name="confirmPass" 
                        placeholder="Confirm Password..."
                        value="<%= typeof confirmPass != 'undefined' ? confirmPass : ''%>"
                    >
                </div>
                <button type="submit" class="signUpButton" name="signUpButton">SignUp</button>
    
            </form>
            
        </div>
    </div>
    
</div>

<script>
    const hide = ()=> {
        const msg = document.getElementsByClassName('message');
        msg[0].style.display = 'none';
    }
</script>

<%- include('partials/footer.ejs') %>